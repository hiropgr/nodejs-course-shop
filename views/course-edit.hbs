<h1 class="title">Change course: {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="form-group">
        <label for="title" class="label" >Title</label>
        <input id="title" class="form-control" type="text" name="title" required placeholder="Course title" value="{{course.title}}">
    </div>

    <div class="form-group">
        <label for="price" class="label">Price</label>
        <input id="price" class="form-control" type="number" name="price" min="0" required placeholder="Course price" value="{{course.price}}">
    </div>

    <div class="form-group">
        <label for="imageUrl" class="label">Image URL</label>
        <input id="imageUrl" class="form-control" type="url" name="imageURL" required placeholder="Image URL" value="{{course.imageURL}}">
    </div>

    <input type="hidden" name="id" value="{{course._id}}">

    <button type="submit" class="btn btn-primary">Save</button>
    <input type="hidden" name="_csrf" value="{{csrf}}">
</form>