<h1 class="title">Add course</h1>

{{#if error}}
    <div class="alert alert-danger py-3" role="alert">
        {{ error }}
    </div>
{{/if}}

<form action="/add" method="POST">
    <div class="form-group">
        <label for="title" class="label" >Title</label>
        <input id="title" class="form-control" type="text" name="title" required placeholder="Course title" value="{{data.title}}">
    </div>

    <div class="form-group">
        <label for="price" class="label">Price</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">â‚½</div>
            </div>
            <input id="price" class="form-control" type="number" name="price" min="0" required placeholder="Course price" value="{{data.price}}">
        </div>
    </div>

    <div class="form-group">
        <label for="imageUrl" class="label">Image URL</label>
        <input id="imageUrl" class="form-control" type="url" name="imageURL" required placeholder="Image URL" value="{{data.imageURL}}">
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <input type="hidden" name="_csrf" value="{{csrf}}">
</form>