<h1 class="title">Add course</h1>

<form action="/add" method="POST">
    <div class="field">
        <label class="label">Title</label>
        <div class="control">
            <input class="input" type="text" name="title" required placeholder="Course title">
        </div>
    </div>

    <div class="field">
        <label class="label">Price</label>
        <div class="control">
            <input class="input" type="number" name="price" min="0" required placeholder="Course price">
        </div>
    </div>

    <div class="field">
        <div class="control">
            <button type="submit" class="button is-link">Add</button>
        </div>
    </div>
</form>