<h1 class="title">Add course</h1>

<form action="/add" method="POST">
    <div class="form-group">
        <label for="title" class="label" >Title</label>
        <input id="title" class="form-control" type="text" name="title" required placeholder="Course title">
    </div>

    <div class="form-group">
        <label for="price" class="label">Price</label>
        <input id="price" class="form-control" type="number" name="price" min="0" required placeholder="Course price">
    </div>

    <div class="form-group">
        <label for="imageUrl" class="label">Image URL</label>
        <input id="imageUrl" class="form-control" type="url" name="imageURL" required placeholder="Image URL">
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>