<h1 class="title">Просмотр курса</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">{{course.title}}</h5>
        <p class="card-text price">
            {{course.price}}
        </p>

        {{#ifeq userId course.userId}}
        <a href="/courses/{{course._id}}/edit" class="btn btn-warning">Edit</a>

        <form action="/courses/delete" class="mt-3" method="POST">
            <input type="hidden" name="id" value="{{course._id}}">
            <button class="btn btn-danger">Delete</button>
            <input type="hidden" name="_csrf" value="{{csrf}}">
        </form>
        {{/ifeq}}
    </div>
    <img src="{{course.imageURL}}" class="card-img-bottom" alt="{{course.title}}">
</div>