<h1>Profile</h1>

<div class="row">
    <div class="col-12 col-sm-6 col-md-4">
        {{#if user.avatarURL}}
        <img 
            src="/{{user.avatarURL}}" 
            alt="avatar-{{user.name}}"
            style="width: 100%"
            class="img-fluid img-thumbnail rounded mx-auto"
        >
        {{else}}
            <p>No avatar</p>
        {{/if}}
    </div>
    <div class="col-12 col-sm-6 col-md-8">
        <div class="form-group">
            <label class="label">Email</label>
            <input type="email" id="email" class="form-control" readonly value="{{ user.email }}">
        </div>
        <form action="/profile?_csrf={{csrf}}" method="post" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <div class="form-group">
                <label for="inputName" class="label">Your name</label>
                <input type="text" id="inputName" class="form-control" placeholder="Name" name="name" required autocomplete="name" value="{{ user.name }}">
            </div>
            <div class="custom-file">
                <label for="exampleFormControlFile" class="label">Avatar</label>
                <input type="file" class="form-control-file" id="exampleFormControlFile" name="avatar">
            </div>
            
            <button type="submit" class="btn btn-primary my-4">
                <strong>Save</strong>
            </button>
        </form>
    </div>
</div>